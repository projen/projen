{
  "name": "projen",
  "description": "A new generation of project generators",
  "repository": {
    "type": "git",
    "url": "https://github.com/projen/projen.git"
  },
  "bin": {
    "projen": "bin/projen"
  },
  "scripts": {
    "compile": "npx -q --no-install -c \"jsii --silence-warnings=reserved-word --no-fix-peer-dependencies\" && npx -q --no-install -c \"jsii-docgen\"",
    "test": "projen test",
    "build": "projen build",
    "start": "npx projen start -i",
    "projen": "yarn compile && node .projenrc.js",
    "no-changes": "(git log --oneline -1 | grep -q \"chore(release):\") && echo \"No changes to release.\"",
    "bump": "projen bump",
    "release": "projen release",
    "test:watch": "projen test:watch",
    "test:update": "projen test:update",
    "projen:upgrade": "projen projen:upgrade",
    "watch": "projen watch",
    "package": "projen package",
    "eslint": "projen eslint",
    "compat": "projen compat",
    "docgen": "projen docgen",
    "readme-macros": "projen readme-macros"
  },
  "author": {
    "name": "Elad Ben-Israel",
    "email": "benisrae@amazon.com",
    "organization": false
  },
  "devDependencies": {
    "@types/fs-extra": "^8",
    "@types/glob": "^7.1.3",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^10.17.0",
    "@types/semver": "^7.3.4",
    "@types/yargs": "^15.0.10",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.14.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "jest-junit": "^12",
    "jsii": "^1.15.0",
    "jsii-diff": "^1.15.0",
    "jsii-docgen": "^1.4.98",
    "jsii-pacmak": "^1.15.0",
    "jsii-release": "^0.2.3",
    "json-schema": "^0.2.5",
    "markmac": "^0.1.23",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^3.9.5"
  },
  "peerDependencies": {},
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "chalk": "^4.1.0",
    "decamelize": "^4.0.0",
    "fs-extra": "^9.0.1",
    "glob": "^7",
    "inquirer": "^7.3.3",
    "semver": "^7.3.2",
    "yaml": "^1.10.0",
    "yargs": "^16.1.1"
  },
  "bundledDependencies": [
    "@iarna/toml",
    "chalk",
    "decamelize",
    "fs-extra",
    "glob",
    "inquirer",
    "semver",
    "yaml",
    "yargs"
  ],
  "keywords": [],
  "engines": {
    "node": ">= 10.17.0"
  },
  "main": "lib/index.js",
  "license": "Apache-2.0",
  "start": {
    "start": {
      "command": "npx projen start",
      "desc": "Shows this menu"
    },
    "bump": {
      "desc": "Commits a bump to the package version based on conventional commits",
      "command": "projen bump",
      "category": 2
    },
    "release": {
      "desc": "Bumps version & push to master",
      "command": "projen release",
      "category": 2
    },
    "test:watch": {
      "desc": "Run jest in watch mode",
      "command": "projen test:watch",
      "category": 1
    },
    "test:update": {
      "desc": "Update jest snapshots",
      "command": "projen test:update",
      "category": 1
    },
    "projen:upgrade": {
      "desc": "upgrades projen to the latest version",
      "command": "projen projen:upgrade",
      "category": 3
    },
    "watch": {
      "desc": "Watch & compile in the background",
      "command": "projen watch",
      "category": 0
    },
    "package": {
      "desc": "Create an npm tarball",
      "command": "projen package",
      "category": 2
    },
    "eslint": {
      "desc": "Runs eslint against the codebase",
      "command": "projen eslint",
      "category": 1
    },
    "compat": {
      "desc": "Perform API compatibility check against latest version",
      "command": "projen compat",
      "category": 2
    },
    "docgen": {
      "desc": "Generate API.md from .jsii manifest",
      "command": "projen docgen",
      "category": 2
    },
    "readme-macros": {
      "desc": "readme-macros",
      "command": "projen readme-macros"
    }
  },
  "version": "0.5.1",
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    }
  },
  "types": "lib/index.d.ts",
  "stability": "experimental",
  "jsii": {
    "outdir": "dist",
    "targets": {},
    "tsc": {
      "outDir": "lib",
      "rootDir": "src"
    }
  }
}